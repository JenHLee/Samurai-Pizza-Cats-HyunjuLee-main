{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "noImplicitOverride": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "target": "ES2020",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build",
    "baseUrl": ".",
    "typeRoots": ["node_modules/@types"],
    "types": ["jest", "@types/jest"],
    "paths": {
      "*": ["*", "node_modules/*", "src/*"]
    }
  },
  "include": ["src/**/*", "scripts/*"]
}
